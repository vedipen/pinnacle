- if user_signed_in?
	.jumbotron.text-center
		%h1
			Hello
			= current_user.name
		%br/
		%h4
			.text-muted
				PMC welcomes you to Pinnacle '18
- else
	.jumbotron.text-center
		%h1#intro
			Welcome to Pinnacle '18
			%h4
				.text-muted
					Lets get started!
%br/
%br/
%br/

.container
	<h4>
	= "Your Wallstreet Balance INR : " + current_user.wallstreetbal.to_s
	<br>
	</h4>
	<br>
	%br/
	= link_to "Buy Stocks", new_ostock_path, class: "data btn btn-primary"
	%br/
	%br/
	= link_to "Portfolio", ostocks_path, class: "data btn btn-primary"
	%br/
	%br/
	%h2
