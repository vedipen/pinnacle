<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Hey <%=
    if user_signed_in?
      current_user.name + "!"
    end
    %></h1>
    <p class="lead text-muted">Teams for Pinnacle '18'</p>
  </div>
</section>

<br>
<br>
<br>

<section class="container">
  <div class="row active-with-click">
    <% @teams.each do |profile| %>
        <div class="col-md-4 col-sm-6 col-xs-12">
            <article class="material-card Grey1">
                <h2>
                    <span><a href="<%= team_path(profile)%>"><%= profile.name %></a></span>
                    <strong>
                      <i class="fa fa-hand-o-right" aria-hidden="true"></i>
                      <p style="display: inline;"><%= profile.teamowner.user.name%></p>
                    </strong>
                </h2>
                <div class="mc-content">
                    <div class="mc-description">
                        <%= simple_format(profile.about_team)%>
                    </div>
                </div>
                <a class="mc-btn-action">
                    <i class="fa fa-bars"></i>
                </a>
                <!-- <div class="mc-footer">
                    <h4>
                        Social
                    </h4>
                    <a class="fa fa-fw fa-facebook"></a>
                    <a class="fa fa-fw fa-twitter"></a>
                    <a class="fa fa-fw fa-linkedin"></a>
                    <a class="fa fa-fw fa-google-plus"></a>
                </div> -->
            </article>
        </div>
      <% end %>
    </div>
</section>
